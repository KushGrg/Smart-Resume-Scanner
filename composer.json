{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "kushgurung/smart-resume-scanner",
    "type": "project",
    "description": "Laravel Volt, Mary UI project starter kit with Auth and Roles",
    "keywords": [
        "laravel",
        "starter-kit",
        "livewire",
        "volt",
        "mary-ui",
        "auth",
        "authentication",
        "roles",
        "spatie",
        "admin-panel",
        "bootstrap",
        "tailwind",
        "ui-kit"
    ],
    "license": "MIT",
    "support": {
        "email": "kushg514@gmail.com",
        "issues": "https://github.com/KushGrg/Smart-Resume-Scanner/issue",
        "source": "https://github.com/KushGrg/Smart-Resume-Scanner"
    },
    "homepage": "https://github.com/KushGrg/Smart-Resume-Scanner",
    "authors": [
        {
            "name": "Kush Gurung",
            "email": "kushg514@gmail.com",
            "homepage": "https://www.kushgurung.com.np",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "barryvdh/laravel-dompdf": "^3.1",
        "laravel/framework": "^12.0",
        "laravel/octane": "^2.10",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.10.1",
        "livewire/livewire": "^3.6",
        "livewire/volt": "^1.7",
        "robsontenorio/mary": "^2.0",
        "spatie/laravel-permission": "^6.16",
        "symfony/brevo-mailer": "^7.3",
        "symfony/http-client": "^7.3"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-laravel": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
        "qa": [
            "@php vendor/bin/phpcs",
            "@php vendor/bin/phpstan analyse --no-progress",
            "@php artisan test"
        ],
        "qa:fix": [
            "@php vendor/bin/phpcbf",
            "@php vendor/bin/pint"
        ],
        "test": [
            "@php artisan test"
        ],
        "test:coverage": [
            "@php artisan test --coverage"
        ],
        "lint": [
            "@php vendor/bin/phpcs"
        ],
        "lint:fix": [
            "@php vendor/bin/phpcbf"
        ],
        "pint": [
            "@php vendor/bin/pint"
        ],
        "pint:test": [
            "@php vendor/bin/pint --test"
        ],
        "stan": [
            "@php vendor/bin/phpstan analyse --no-progress"
        ],
        "setup-hooks": [
            "git config core.hooksPath .githooks"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}